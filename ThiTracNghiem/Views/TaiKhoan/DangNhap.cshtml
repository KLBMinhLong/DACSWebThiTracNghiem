<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đăng nhập - ThiTracNghiem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/dangnhap.css" asp-append-version="true" />
</head>

<body>
    <div class="login-container">
        <form class="login-form" asp-action="DangNhap" method="post">
            <h2>Đăng nhập</h2>
            <div>
                <label>Tên tài khoản</label>
                <input name="tenTaiKhoan" />
            </div>
            <div>
                <label>Mật khẩu</label>
                <div class="password-wrapper">
                    <input name="matKhau" type="password" id="passwordInput" />
                    <button type="button" id="togglePassword" tabindex="-1">
                        <span id="eyeIcon" class="bi bi-eye"></span>
                    </button>
                </div>
            </div>
            <button class="btn btn-signin" type="submit">Đăng nhập</button>
            <div class="d-flex justify-content-end mt-2">
                <a href="/TaiKhoan/QuenMatKhau">Quên mật khẩu?</a>
            </div>
        </form>
    </div>

    @if (ViewBag.Loi != null)
    {
        <p class="error-message" style="color:red;">@ViewBag.Loi</p>
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.js"></script>
    <script>
        const passwordInput = document.getElementById('passwordInput');
        const togglePassword = document.getElementById('togglePassword');
        const eyeIcon = document.getElementById('eyeIcon');
        if (togglePassword) {
            togglePassword.addEventListener('click', function (e) {
                e.preventDefault();
                const type = passwordInput.type === 'password' ? 'text' : 'password';
                passwordInput.type = type;
                eyeIcon.className = type === 'password' ? 'bi bi-eye-slash' : 'bi bi-eye';
            });
        }
    </script>
</body>

</html>
