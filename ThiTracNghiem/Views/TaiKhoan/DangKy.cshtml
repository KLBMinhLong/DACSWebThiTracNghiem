@model ThiTracNghiem.Models.TaiKhoan


<h2>Đăng ký tài khoản</h2>

@if (ViewBag.ThongBao != null)
{
    <div class="alert alert-success">@ViewBag.ThongBao</div>
}

<form asp-action="DangKy" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label>Tên tài khoản</label>
        <input asp-for="TenTaiKhoan" class="form-control" />
        <span asp-validation-for="TenTaiKhoan" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MatKhau">Mật khẩu</label>
        <input asp-for="MatKhau" type="password" class="form-control" id="MatKhau" />
        <span asp-validation-for="MatKhau" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Nhập lại mật khẩu</label>
        <input  type="password" class="form-control" id="NhapLaiMatKhau" />
        <span id="passwordMismatch" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Ngày sinh</label>
        <input asp-for="NgaySinh" type="date" class="form-control" />
        <span asp-validation-for="NgaySinh" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Giới tính</label>
        <select asp-for="GioiTinh" class="form-control">
            <option value="">-- Chọn giới tính --</option>
            <option value="Nam">Nam</option>
            <option value="Nữ">Nữ</option>
        </select>
        <span asp-validation-for="GioiTinh" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Số điện thoại</label>
        <input asp-for="SoDienThoai" class="form-control" />
        <span asp-validation-for="SoDienThoai" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Đăng ký</button>
</form>

@section Scripts {
    <script>
        $(document).ready(function(){
            $('#NhapLaiMatKhau').on('keyup', function(){
                var password = $('#MatKhau').val();
                var confirm = $(this).val();
                
                if (password !== confirm) {
                    $('#passwordMismatch').text('Mật khẩu không khớp');
                } else {
                    $('#passwordMismatch').text('');
                }
            });
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

