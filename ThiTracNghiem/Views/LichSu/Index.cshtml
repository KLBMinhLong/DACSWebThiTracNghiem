@model List<ThiTracNghiem.Models.LichSuLamBai>

<h3 class="mb-3">Lịch sử thi</h3>

@if (!Model.Any())
{
    <p>Bạn chưa có lịch sử thi nào.</p>
}
else
{
    <table class="table table-bordered text-center">
        <thead class="table-light">
            <tr>
                <th>STT</th>
                <th>Tên tài khoản</th>
                <th>Mã đề thi (DeThiId)</th>
                <th>Thời gian bắt đầu</th>
                <th>Thời gian nộp bài</th>
                <th>Điểm</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                var item = Model[i];
                <tr>
                    <td>@(i + 1)</td>
                    <td>@item.TenTaiKhoan</td>
                    <td>@item.DeThiId</td>
                    <td>@item.NgayBatDau.ToString("HH:mm:ss dd/MM/yyyy")</td>
                    <td>@item.NgayNopBai?.ToString("HH:mm:ss dd/MM/yyyy")</td>
                    <td>@item.Diem</td>
                </tr>
            }
        </tbody>
    </table>
}
