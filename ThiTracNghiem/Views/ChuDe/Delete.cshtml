@model ChuDe

@{
    ViewData["Title"] = "Xóa chủ đề";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Xóa chủ đề</h1>

<h3>Bạn có muốn xóa chủ đề này không?</h3>
<div>
    <h4>Chủ Đề</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TenChuDe)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenChuDe)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Trở lại danh sách</a>
    </form>
</div>
