@model KetQuaViewModel

@{
    ViewBag.Title = "Kết quả bài thi";
    var tongCauHoi = Model.TongCauHoi;
    var soCauDung = Model.SoCauDung;
    var diem = Model.DiemSo;
    var soCauSai = tongCauHoi - soCauDung;
    var phanTram = Math.Round((double)soCauDung / tongCauHoi * 100);
}

<div class="container mt-4">
    <div class="card p-4 shadow-sm mb-4">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h4 class="fw-bold">Kết quả bài thi</h4>
                <p>
                    <i class="bi bi-clock"></i> Hoàn thành: @DateTime.Now.ToString("dd/MM/yyyy - HH:mm") <br />
                    <span class="text-secondary">Thời gian làm bài: <strong>@Model.ThoiGianPhut phút</strong> &nbsp; | &nbsp;
                        Số câu: <strong>@tongCauHoi</strong></span>
                </p>
            </div>
            <div class="col-md-4 text-center">
                <div class="rounded-circle border border-success p-4"
                    style="width: 120px; height: 120px; margin: 0 auto;">
                    <div class="fs-4 fw-bold text-success">@soCauDung/@tongCauHoi</div>
                    <div class="text-secondary">@phanTram%</div>
                </div>
            </div>
        </div>
    </div>

    <div class="row text-center mb-4">
        <div class="col-md-4">
            <h3 class="text-success">@soCauDung</h3>
            <p>Câu đúng</p>
        </div>
        <div class="col-md-4">
            <h3 class="text-danger">@soCauSai</h3>
            <p>Câu sai</p>
        </div>
        <div class="col-md-4">
            <h3 class="text-primary">@diem</h3>
            <p>Điểm số</p>
        </div>
    </div>

    <div class="card shadow-sm p-4">
        <h5 class="mb-3">Chi tiết kết quả</h5>

        @for (int i = 0; i < Model.ChiTietTraLoi.Count; i++)
        {
            var item = Model.ChiTietTraLoi[i];
            var status = item.DungHaySai ? "dung" : "sai";

            <div class="ketqua-item border-bottom py-3" data-status="@status">
                <strong>Câu hỏi @(@i + 1):</strong>
                <span class="badge bg-@(item.DungHaySai ? "success" : "danger")">
                    @(item.DungHaySai ? "Đúng" : "Sai")
                </span>

                <div class="mt-2">@item.CauHoi</div>

                @if (!string.IsNullOrEmpty(item.HinhAnhUrl))
                {
                    <div class="my-2">
                        <img src="@item.HinhAnhUrl" alt="Hình ảnh" class="img-fluid rounded" style="max-width: 300px;" />
                    </div>
                }

                @if (!string.IsNullOrEmpty(item.AudioUrl))
                {
                    <div class="my-2">
                        <audio controls>
                            <source src="@item.AudioUrl" type="audio/mpeg" />
                            Trình duyệt không hỗ trợ audio.
                        </audio>
                    </div>
                }

                <div class="mt-2">
                    <p><strong>A.</strong> @item.DapAnA</p>
                    <p><strong>B.</strong> @item.DapAnB</p>
                    <p><strong>C.</strong> @item.DapAnC</p>
                    <p><strong>D.</strong> @item.DapAnD</p>
                    <p><strong>Đáp án bạn chọn:</strong> <span class="text-primary">@item.DapAnChon</span></p>
                    <p><strong>Đáp án đúng:</strong> <span class="text-success">@item.DapAnDung</span></p>
                </div>
            </div>
        }
    </div>
</div>
