@model DeThi
@{
    ViewData["Title"] = "Tạo đề thi";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Tạo đề thi</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="TenDeThi"></label>
        <input asp-for="TenDeThi" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ThoiGianLamBai"></label>
        <input asp-for="ThoiGianLamBai" class="form-control" />
    </div>

    <div class="form-check mt-3"></div>
    <input asp-for="TrangThaiMo" class="form-check-input" type="checkbox" />
    <label asp-for="TrangThaiMo" class="form-check-label">Mở đề thi</label>
    </div>

    <div class="form-group">
        <label asp-for="ChuDeId">Chủ đề</label>
        <select asp-for="ChuDeId" class="form-control" asp-items="ViewBag.ChuDeId" onchange="this.form.submit();">
            <option value="">-- Chọn chủ đề --</option>
        </select>
    </div>

    <div class="form-group mt-3">
        <label for="SoLuongCauHoi">Số lượng câu hỏi</label>
        <input type="number" class="form-control" name="SoLuongCauHoi" min="1" required />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Tạo đề thi</button>
</form>
